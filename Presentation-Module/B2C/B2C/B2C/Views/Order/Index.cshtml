
@{
    Layout = "~/Views/Layout/interna.cshtml";
    ViewBag.Title = "Ordenes";

    var orders = (ViewData["orders"] as List<B2C.Entities.Order>);


}

@section content
{
    <div id="order_detail" style="display:none;">

    </div>

    <div id="features-wrapper">
        <div class="container">
            <div class="row">
                @foreach (var item in orders)
                {
                    @RenderPage("~/Views/Order/OrderSmall.cshtml", new { @price = item.Price, @id = item.Id, comments = item.Comments, status = item.Status })
                }
            </div>
        </div>
    </div>




}




